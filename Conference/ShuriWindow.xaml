<Window x:Class="Conference.ShuriWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conference"
        mc:Ignorable="d"
        Title="ShuriWindow" Height="666" Width="880">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="631" Width="860">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="858"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="InputList" Height="NaN" Margin="17,309,241,100" Width="NaN" BorderBrush="#FFA4D7FF" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Path=EventName}"/>
                            <TextBlock Text="{Binding Path=EventDate}"/>
                            <TextBlock Text="{Binding Path=EventDirection}"/>

                            <Image Source="{Binding EventPicture}" Width="50" Height="50"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox x:Name="InputList2" Height="NaN" Margin="17,42,241,367" Width="NaN" BorderBrush="#FFA4D7FF" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Path=FIO}"/>
                            <TextBlock Text="{Binding Path=Mail}"/>
                            <TextBlock Text="{Binding Path=BirthdayData}"/>
                            <TextBlock Text="{Binding Path=Country}"/>
                            <TextBlock Text="{Binding Path=TelephoneNumber}"/>
                            <TextBlock Text="{Binding Path=Gender}"/>

                            <Image Source="{Binding Photo}" Width="50" Height="50"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Label Content="Мероприятия" HorizontalAlignment="Left" Margin="17,269,0,0" VerticalAlignment="Top" Height="28" Width="90"/>
        <ComboBox HorizontalAlignment="Left" Margin="653,309,0,0" VerticalAlignment="Top" Width="136" SelectionChanged="ComboBox_SelectionChanged" Height="22">
            <ComboBoxItem Content="2022"/>
            <ComboBoxItem Content="2023"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="653,417,0,0" VerticalAlignment="Top" Width="136" SelectionChanged="ComboBox_SelectionChanged2" Height="22">
            <ComboBoxItem Content="Биг дата"/>
            <ComboBoxItem Content="Аналитика"/>
            <ComboBoxItem Content="Дизайн"/>
            <ComboBoxItem Content="Информационная"/>
            <ComboBoxItem Content="ИТ"/>
        </ComboBox>
        <Label Content="Фильтр по дате" HorizontalAlignment="Left" Margin="653,276,0,0" VerticalAlignment="Top" Height="28" Width="120"/>
        <Label Content="Фильтр по направлению" HorizontalAlignment="Left" Margin="653,384,0,0" VerticalAlignment="Top" Height="28" Width="159"/>
        <Button Content="сбросить фильтр" HorizontalAlignment="Left" Margin="672,476,0,0" VerticalAlignment="Top" Height="29" Width="98" Click="Button_Click2" Background="#FFA4D7FF" Foreground="Black" BorderBrush="Black"/>
        <Label Content="Участники" HorizontalAlignment="Left" Margin="17,0,0,0" VerticalAlignment="Top" Height="28" Width="90"/>
    </Grid>
</Window>
