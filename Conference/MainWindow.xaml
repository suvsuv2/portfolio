<Window x:Class="Conference.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conference"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="935">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="415" Width="915">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="834"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Авторизация" HorizontalAlignment="Left" Margin="744,315,0,0" VerticalAlignment="Top" Height="39" Width="120" Click="Button_Click" Background="#FFA4D7FF" Foreground="Black" BorderBrush="#FF003EFF" Grid.ColumnSpan="2"/>
        <ListBox x:Name="InputList" Height="NaN" Margin="9,38,135,72" Width="NaN" BorderBrush="#FFA4D7FF" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Path=EventName}"/>
                            <TextBlock Text="{Binding Path=EventDate}"/>
                            <TextBlock Text="{Binding Path=EventDirection}"/>

                            <Image Source="{Binding EventPicture}" Width="50" Height="50"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Мероприятия" HorizontalAlignment="Left" Margin="9,5,0,0" VerticalAlignment="Top" Height="28" Width="90"/>
        <ComboBox HorizontalAlignment="Left" Margin="736,57,0,0" VerticalAlignment="Top" Name="Combobox1" Width="136" SelectionChanged="ComboBox_SelectionChanged" Height="22" Grid.ColumnSpan="2">
            <ComboBoxItem Content="2022"/>
            <ComboBoxItem Content="2023"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="736,165,0,0" VerticalAlignment="Top" Name="Combobox2" Width="136" SelectionChanged="ComboBox_SelectionChanged2" Height="22" Grid.ColumnSpan="2">
            <ComboBoxItem Content="Биг дата"/>
            <ComboBoxItem Content="Аналитика"/>
            <ComboBoxItem Content="Дизайн"/>
            <ComboBoxItem Content="Информационная"/>
            <ComboBoxItem Content="ИТ"/>
        </ComboBox>
        <Label Content="Фильтр по дате" HorizontalAlignment="Left" Margin="736,24,0,0" VerticalAlignment="Top" Height="28" Width="120" Grid.ColumnSpan="2"/>
        <Label Content="Фильтр по направлению" HorizontalAlignment="Left" Margin="736,132,0,0" VerticalAlignment="Top" Height="28" Width="159" Grid.ColumnSpan="2"/>
        <Button Content="сбросить фильтр" HorizontalAlignment="Left" Margin="755,224,0,0" VerticalAlignment="Top" Height="29" Width="98" Click="Button_Click2" Background="#FFA4D7FF" BorderBrush="#FF003EFF" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
