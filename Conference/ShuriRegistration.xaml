<Window x:Class="Conference.ShuriRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conference"
        mc:Ignorable="d"
        Title="ShuriRegistration" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="435">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="791"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Регистрация жюри" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Height="45" Width="213" FontSize="22" FontFamily="Comic Sans MS" FontWeight="Bold"/>
        <ComboBox HorizontalAlignment="Left" Margin="243,291,0,0" VerticalAlignment="Top" Width="120" Name="DirectionTextBox" Height="22" >
            <ComboBoxItem Content="Биг дата"/>
            <ComboBoxItem Content="Аналитика"/>
            <ComboBoxItem Content="Дизайн"/>
            <ComboBoxItem Content="Информационная"/>
            <ComboBoxItem Content="ИТ"/>
        </ComboBox>
        <Label Content="Направление:" HorizontalAlignment="Left" Margin="159,289,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="90"  />
        <TextBox HorizontalAlignment="Left" Margin="578,263,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120" FontStyle="Italic" Background="White" Name="passwordTextBox" Foreground="LightGray" TextChanged="TextBox_TextChanged" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
        <TextBox HorizontalAlignment="Left" Margin="578,293,0,0" TextWrapping="Wrap" Text="Re-enter password"  VerticalAlignment="Top" Width="120"  FontStyle="Italic" Name="reenterPasswordTextBox" Background="White" Foreground="LightGray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="521,258,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="57"/>
        <Label Content="Повтор пароля:"  HorizontalAlignment="Left" Margin="480,287,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="98"/>
        <Button Content="Добавить жюри" HorizontalAlignment="Left" Margin="330,369,0,0" VerticalAlignment="Top" Width="140" Height="45" Background="#FFA4D7FF" BorderBrush="#FF003EFF" Click="AddEventButton_Click" />
        <TextBox HorizontalAlignment="Left" Margin="243,92,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="TextBox1" IsEnabled="False" Height="18"/>
        <Label Content="ID:" HorizontalAlignment="Left" Margin="221,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="76" Height="26"/>
        <TextBox HorizontalAlignment="Left" Margin="243,122,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="FIOTextBox" Height="18"/>
        <Label Content="FIO:" HorizontalAlignment="Left" Margin="215,118,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="34" Height="26"/>
        <TextBox HorizontalAlignment="Left" Margin="243,149,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="MaleTextBox" Height="18" />
        <Label Content="Mail:" HorizontalAlignment="Left" Margin="209,145,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="36" Height="26"/>
        <DatePicker HorizontalAlignment="Left" Margin="243,176,0,0" VerticalAlignment="Top" Width="120" x:Name="Date" Height="24"/>
        <Label Content="Дата Рождения:" HorizontalAlignment="Left" Margin="149,177,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="104" Height="26"/>
        <Label Content="Страна:" HorizontalAlignment="Left" Margin="193,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="0.541,-0.21" Width="56" Height="26"/>
        <TextBox HorizontalAlignment="Left" Margin="243,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" x:Name="CountryTextBox" Height="18" />
        <Label Content="Номер телефона:" HorizontalAlignment="Left" Margin="139,227,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="106" Height="26"/>
        <TextBox HorizontalAlignment="Left" Margin="243,232,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="TelephoneNumberTextBox" Height="18" />
        <Label Content="Гендер:" HorizontalAlignment="Left" Margin="193,258,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="52" Height="26"/>
        <ComboBox HorizontalAlignment="Left" Margin="243,260,0,0" VerticalAlignment="Top" Width="120" x:Name="GenderComboBox" Height="22" >
            <ComboBoxItem Content="Мужской"/>
            <ComboBoxItem Content="Женский"/>
        </ComboBox>


        <CheckBox Content="Невидимый пароль" HorizontalAlignment="Left" Margin="578,323,0,0" VerticalAlignment="Top" Height="18" Width="132" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"  />
    </Grid>
</Window>
