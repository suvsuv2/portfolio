<Window x:Class="Conference.EventRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conference"
        mc:Ignorable="d"
        Title="EventRegistration" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="435">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="791"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Регистрация Мероприятий" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Height="45" Width="301" FontSize="22" FontFamily="Comic Sans MS" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="400,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="TextBox1" IsEnabled="False" Height="18"/>
        <Label Content="ID:" HorizontalAlignment="Left" Margin="378,98,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="76" Height="26"/>
        <TextBox HorizontalAlignment="Left" Margin="400,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="NumberTextBox" Height="18"/>
        <Label Content="Номер Мероприятия:" HorizontalAlignment="Left" Margin="272,128,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="130" Height="26"/>
        <TextBox HorizontalAlignment="Left" Margin="400,159,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="NameTextBox" Height="18" />
        <Label Content="Название Мероприятия:" HorizontalAlignment="Left" Margin="256,155,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="146" Height="26"/>
        <DatePicker HorizontalAlignment="Left" Margin="400,186,0,0" VerticalAlignment="Top" Width="120" Name="Date" Height="24"/>
        <Label Content="Дата Мероприятия:" HorizontalAlignment="Left" Margin="285,186,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="125" Height="26"/>
        <Label Content="Дни Мероприятия:" HorizontalAlignment="Left" Margin="288,215,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="119" Height="26"/>
        <TextBox HorizontalAlignment="Left" Margin="400,219,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="DayTextBox" Height="18" />
        <Label Content="Номер Город Мероприятия:" HorizontalAlignment="Left" Margin="236,239,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="166" Height="26"/>
        <TextBox HorizontalAlignment="Left" Margin="400,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="CityTextBox" Height="18" />
        <Label Content="Направление Мероприятия:" HorizontalAlignment="Left" Margin="236,263,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="166" Height="26"/>
        <ComboBox HorizontalAlignment="Left" Margin="400,265,0,0" VerticalAlignment="Top" Width="120" Name="DirectionTextBox" Height="22" >
            <ComboBoxItem Content="Биг дата"/>
            <ComboBoxItem Content="Аналитика"/>
            <ComboBoxItem Content="Дизайн"/>
            <ComboBoxItem Content="Информационная"/>
            <ComboBoxItem Content="ИТ"/>
        </ComboBox>
        <Button Content="Добавить мероприятие" HorizontalAlignment="Center" Margin="0,338,0,0" VerticalAlignment="Top" Width="140" Height="45" Background="#FFA4D7FF" BorderBrush="#FF003EFF" Click="AddEventButton_Click" />
    </Grid>
</Window>
