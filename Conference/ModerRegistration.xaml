<Window x:Class="Conference.ModerRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conference"
        mc:Ignorable="d"
        Title="ModerRegistration" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="435">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="791"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Регистрация Модераторов" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Height="45" Width="298" FontSize="22" FontFamily="Comic Sans MS" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="232,83,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsEnabled="False" Name="TextBox1" />
        <Label Content="ID number:" HorizontalAlignment="Left" Margin="161,79,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="75"/>
        <TextBox HorizontalAlignment="Left" Margin="232,113,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="FIOTextBox"  />
        <Label Content="ФИО:" HorizontalAlignment="Left" Margin="193,113,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="39"/>
        <TextBox HorizontalAlignment="Left" Margin="232,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="MailTextBox" />
        <TextBox HorizontalAlignment="Left" Margin="232,259,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="TelephoneNumberTextBox"  />
        <ComboBox HorizontalAlignment="Left" Margin="232,289,0,0" VerticalAlignment="Top" Width="120" Name="DirectionTextBox" Height="22" >
            <ComboBoxItem Content="Биг дата"/>
            <ComboBoxItem Content="Аналитика"/>
            <ComboBoxItem Content="Дизайн"/>
            <ComboBoxItem Content="Информационная"/>
            <ComboBoxItem Content="ИТ"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="232,321,0,0" VerticalAlignment="Top" Width="120" Name="EventTextBox" Height="22" >
            <ComboBoxItem Content="IT в бизнесе"/>
            <ComboBoxItem Content="Разработка приложений"/>
            <ComboBoxItem Content="IT-инфраструктура"/>
            <ComboBoxItem Content="Информационная безопасность"/>
            <ComboBoxItem Content="Стартапы"/>
        </ComboBox>
        <Label Content="Гендер:" HorizontalAlignment="Left" Margin="180,136,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="52"/>
        <Label Content="Дата Рождения:" HorizontalAlignment="Left" Margin="137,194,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="99"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="193,168,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="75"/>
        <Label Content="Телефон:" HorizontalAlignment="Left" Margin="175,255,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="75"/>
        <Label Content="Направление:" HorizontalAlignment="Left" Margin="146,287,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="90"/>
        <Label Content="Мероприятие:" HorizontalAlignment="Left" Margin="142,317,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="98"/>
        <Button Content="Добавить мероприятие" HorizontalAlignment="Center" Margin="0,370,0,0" VerticalAlignment="Top" Width="140" Height="45" Background="#FFA4D7FF" BorderBrush="#FF003EFF" Click="AddEventButton_Click" />
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="521,277,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="57"/>
        <Label Content="Повтор пароля:"  HorizontalAlignment="Left" Margin="480,305,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="98"/>

        <TextBox HorizontalAlignment="Left" Margin="578,281,0,0" TextWrapping="Wrap"  Text="Password" VerticalAlignment="Top" Width="120" FontStyle="Italic" Name="passwordTextBox"  Background="White" Foreground="LightGray"  GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <TextBox HorizontalAlignment="Left" Margin="578,311,0,0" TextWrapping="Wrap" Text="Re-enter password"  VerticalAlignment="Top" Width="120"  FontStyle="Italic" Name="reenterPasswordTextBox" Background="White" Foreground="LightGray"  GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
        <CheckBox Content="Невидимый пароль" HorizontalAlignment="Left" Margin="578,342,0,0" VerticalAlignment="Top" Height="18" Width="132" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"  />

        <DatePicker HorizontalAlignment="Left" Margin="232,196,0,0" VerticalAlignment="Top" Width="120" x:Name="Date" Height="24"/>

        <ComboBox HorizontalAlignment="Left" Margin="232,140,0,0" VerticalAlignment="Top" Width="120" x:Name="GenderComboBox" Height="22" >
            <ComboBoxItem Content="Мужской"/>
            <ComboBoxItem Content="Женский"/>
        </ComboBox>
        <Label Content="Страна:" HorizontalAlignment="Left" Margin="182,228,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.541,-0.21" Width="56" Height="26"/>
        <TextBox HorizontalAlignment="Left" Margin="232,232,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="CountryTextBox" Height="18" />

    </Grid>
</Window>
