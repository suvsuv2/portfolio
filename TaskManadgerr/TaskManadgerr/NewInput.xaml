<Window x:Class="TaskManadgerr.NewInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManadgerr"
        mc:Ignorable="d"
        Title="NewInput" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="nameTask" Grid.Row="0" Margin="182,18,182,10"/>

        <TextBox x:Name="TypeTask" Grid.Row="1" Margin="182,18,182,10"/>

        <TextBox x:Name="Data" Grid.Row="2" Margin="182,18,182,10"/>



        <Button x:Name="addNewTask" Content="Создать" Grid.Row="4" Click="addNewTask_Click" Margin="311,18,311,10"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="98,0,0,0" VerticalAlignment="Center"/>
        <Label Content="Дата" HorizontalAlignment="Left" Margin="98,34,0,0" VerticalAlignment="Top" Grid.Row="2"/>
        <Label Content="Тип" HorizontalAlignment="Left" Margin="98,34,0,0" VerticalAlignment="Top" Grid.Row="1"/>
    </Grid>
</Window>
