<Window x:Class="TaskManadgerr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManadgerr"
        mc:Ignorable="d"
        Title="MainWindow" Height="467" Width="800" ResizeMode="NoResize" >
    <Grid Background="#FFE6E6E6" Margin="0,0,0,-6">
        <Label Content="Input" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Work In Progress" HorizontalAlignment="Left" Margin="279,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Output" HorizontalAlignment="Left" Margin="596,10,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="InputList"  Height="NaN" Margin="0,53,558,57" Width="NaN"  >

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                            <StackPanel>
                                <Border >
                                    <TextBlock Text="{Binding Path=Name}" />
                                </Border>
                                <Border>
                                    <TextBlock Text="{Binding Path=Date}" />
                                </Border>
                                <Border >
                                    <TextBlock Text="{Binding Path=Type}" />
                                </Border>
                            </StackPanel>
                        </Border>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox x:Name="WorkList" Height="NaN" Margin="279,53,279,57" Width="NaN">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                            <StackPanel>
                                <Border >
                                    <TextBlock Text="{Binding Path=Name}" />
                                </Border>
                                <Border>
                                    <TextBlock Text="{Binding Path=Date}" />
                                </Border>
                                <Border >
                                    <TextBlock Text="{Binding Path=Type}" />
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:Name="OutputList" Height="NaN" Margin="558,53,0,57" Width="NaN">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                            <StackPanel>
                                <Border >
                                    <TextBlock Text="{Binding Path=Name}" />
                                </Border>
                                <Border>
                                    <TextBlock Text="{Binding Path=Type}" />
                                </Border>
                                <Border >
                                    <TextBlock Text="{Binding Path=Status}" />
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="54,405,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click"/>
        <Button Content="Удалить выделенное" HorizontalAlignment="Center"  x:Name="deleteButton" Margin="0,405,0,0" VerticalAlignment="Top" Width="134" Click="deleteTask_Click"/>


    </Grid>
</Window>
